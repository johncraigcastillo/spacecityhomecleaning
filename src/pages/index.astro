---
import { Icon } from 'astro-icon/components';
import {
	AnnouncementBar,
	Button,
	CustomerQuoteSection,
	ThreeColumnTextSection,
	CtaCardSection,
	TextCardSection,
} from '@components/odyssey-theme';
import Layout from '../layouts/Page.astro';
import TextAndImageHero from '../components/sections/heros/TextAndImageHero.astro';

const seo = {
	title:
		'Space City Home Cleaning | Residential & Commercial Cleaning Services in Houston, TX',
	description:
		'Space City Home Cleaning | Residential & Commercial Cleaning Services | Houston, TX',
};
---

<AnnouncementBar
	text="10% Off First Deep Cleaning For New Clients!"
	href="/company/contact"
	slot="announcement-bar"
/>
<Layout {seo}>
	<TextAndImageHero reversed>
		<div slot="text-container">
			<h1>Space City Home Cleaning</h1>
			<p>
				Professional Residential & Commercial Cleaning Services in Houston, TX.
				Satisfaction Guaranteed!
			</p>
		</div>
		<div slot="btns-container">
			<Button href="/company/contact" customIcon
				>Get a Free Quote <Fragment slot="icon">
					<Icon name="ic:baseline-chevron-right" />
				</Fragment></Button
			>
		</div>
		<picture slot="image-container">
			<img
				src="/assets/images/landing-1/landing-hero-1.png"
				alt="Astro Odyssee"
				id="home-hero-image"
			/>
		</picture>
	</TextAndImageHero>

	<CustomerQuoteSection
		quoteText="Space City Home Cleaning did an amazing job on our home! Their team was professional, and the house has never looked better."
		customerName="John Castillo"
	/>

	<ThreeColumnTextSection>
		<div slot="column-1-body">
			<h2>Why Choose Us?</h2>
			<p>
				Our trained teams use environmentally preferred products and take
				Covid-19 precautions with masks and gloves. We ensure all cleaning is
				done to your satisfaction.
			</p>
		</div>
		<Button slot="column-1-cta" outlined>Learn More</Button>
		<div slot="column-2-body">
			<h2>Our Services</h2>
			<p>
				We offer thorough maintenance cleaning for all rooms, including dusting,
				polishing furniture, vacuuming, mopping, and more. Specialized cleaning
				for kitchens and bathrooms is also available.
			</p>
		</div>
		<Button href="#services" slot="column-2-cta" outlined>Learn More</Button>
		<div slot="column-3-body">
			<h2>Get Started</h2>
			<p>
				We offer weekly, bi-weekly, monthly, and one-time deep cleanings. New
				clients get 10% off their first deep cleaning. Contact us today for a
				free quote!
			</p>
		</div>
		<Button href="/company/contact" slot="column-3-cta" outlined
			>Contact Us</Button
		>
	</ThreeColumnTextSection>

	<CtaCardSection
		background="var(--theme-surface-2)"
		color="var(--theme-on-surface-2)"
	>
		<h2>Contact Us Today</h2>
		<p>
			Call or text us at 346-276-3466 for your free quote. Or email us at
			Spacecityhc23@gmail.com. We look forward to serving you!
		</p>
		<Button href="/company/contact" customIcon>
			Get a Free Quote <Fragment slot="icon">
				<Icon name="ic:baseline-chevron-right" />
			</Fragment>
		</Button>
	</CtaCardSection>

	<div id="services">
		<h2>Our Cleaning Services</h2>

		<ThreeColumnTextSection>
			<div slot="column-1-body">
				<h3>All Rooms</h3>
				<p>
					- Dust / Polish Furniture<br />
					- Dust Blinds<br />
					- Empty Trash<br />
					- Vacuum / Mop Floors
				</p>
			</div>
			<div id="services" slot="column-2-body">
				<h3>Kitchen</h3>
				<p>
					- Stovetop<br />
					- Outside Cabinets<br />
					- Countertops<br />
					- Outside of all Appliances<br />
					- Inside of Microwave
				</p>
			</div>
			<div id="services" slot="column-3-body">
				<h3>Bathrooms</h3>
				<p>
					- Toilets<br />
					- Shower / Tub<br />
					- Sinks / Countertops<br />
					- Mirrors
				</p>
			</div>
		</ThreeColumnTextSection>
	</div>
</Layout>

<style>
	#services {
		text-align: center;
	}
</style>
